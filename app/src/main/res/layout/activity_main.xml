<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_purple"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_ungu">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_people"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ads"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginStart="24dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_select_language"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_language_24"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="24dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_profile"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="14dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_banner"
        android:layout_width="365dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/cl_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-90dp"
        app:cardElevation="12dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_diskon"
            android:scaleType="centerCrop"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/diskon"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_50"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_your_food_through_my_app_nand_get_your_discount"
            android:textColor="@color/white"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cv_menu1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cv_banner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/nasi"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cv_menu2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cv_banner"
        app:layout_constraintStart_toEndOf="@id/cv_menu1"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/mie"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cv_menu3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cv_banner"
        app:layout_constraintStart_toEndOf="@id/cv_menu2"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/snack"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cv_menu4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/cv_banner"
        app:layout_constraintStart_toEndOf="@id/cv_menu3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/minuman"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rice"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_menu1"
        app:layout_constraintStart_toStartOf="@id/cv_menu1"
        app:layout_constraintEnd_toEndOf="@id/cv_menu1"
        android:layout_marginTop="-4dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_noodles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/noodles"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_menu2"
        app:layout_constraintStart_toStartOf="@id/cv_menu2"
        app:layout_constraintEnd_toEndOf="@id/cv_menu2"
        android:layout_marginTop="-4dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/snack"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_menu3"
        app:layout_constraintStart_toStartOf="@id/cv_menu3"
        app:layout_constraintEnd_toEndOf="@id/cv_menu3"
        android:layout_marginTop="-4dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_menu4"
        app:layout_constraintStart_toStartOf="@id/cv_menu4"
        app:layout_constraintEnd_toEndOf="@id/cv_menu4"
        android:layout_marginTop="-4dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_food_menu_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_menu_list"
        android:textStyle="bold"
        android:textColor="@color/ungu_tua"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_rice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_dehaze_24"
        app:layout_constraintTop_toBottomOf="@id/tv_drink"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_ayam_bakar"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/ayam_bakar"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_food_menu_list"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ayam_bakar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayam_bakar"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/iv_ayam_bakar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_price_ab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_50_000"
        android:textColor="@color/orange_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_ayam_bakar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_ayam_goreng"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/ayam_goreng"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_food_menu_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_ayam_bakar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ayam_goreng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayam_goreng"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/iv_ayam_goreng"
        app:layout_constraintStart_toStartOf="@id/iv_ayam_goreng" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_price_ag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_40_000"
        android:textColor="@color/orange_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_ayam_goreng"
        app:layout_constraintStart_toStartOf="@id/tv_ayam_goreng" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_ayam_geprek"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/ayam_geprek"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_price_ab"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ayam_geprek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ayam_geprek"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/iv_ayam_geprek"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_price_gprk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_60_000"
        android:textColor="@color/orange_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_ayam_geprek"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_sate_usus_ayam"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/sate_usus_ayam"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/tv_price_ag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_ayam_geprek"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_sate_usus_ayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sate_usus_ayam"
        android:textColor="@color/ungu_tua"
        android:textStyle="bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/iv_sate_usus_ayam"
        app:layout_constraintStart_toStartOf="@id/iv_sate_usus_ayam" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_price_sate_usus_ayam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rp_30_000"
        android:textColor="@color/orange_muda"
        app:layout_constraintTop_toBottomOf="@id/tv_sate_usus_ayam"
        app:layout_constraintStart_toStartOf="@id/iv_sate_usus_ayam" />




</androidx.constraintlayout.widget.ConstraintLayout>